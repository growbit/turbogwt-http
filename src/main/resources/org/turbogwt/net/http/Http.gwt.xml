<module>
    <!-- Inherit the core Web Toolkit stuff. -->
    <inherits name="com.google.gwt.user.User"/>
    <inherits name="com.google.gwt.http.HTTP"/>

    <!-- Inherit the core Turbo GWT stuff. -->
    <inherits name="org.turbogwt.core.js.Js"/>
    <inherits name="org.turbogwt.core.util.Util"/>

    <source path="client" excludes="**/*Test.java,**/*TestSuite.java,**/*TestUtil.java,mock/*.*,model/*.*,books/*.*"/>

    <replace-with class="org.turbogwt.net.http.client.UriBuilderImpl">
        <when-type-is class="org.turbogwt.net.http.client.UriBuilder"/>
    </replace-with>

    <replace-with class="org.turbogwt.net.http.client.ServerConnectionImpl">
        <when-type-is class="org.turbogwt.net.http.client.ServerConnection"/>
    </replace-with>

    <replace-with class="org.turbogwt.net.http.client.ServerImpl">
        <when-type-is class="org.turbogwt.net.http.client.Server"/>
    </replace-with>

    <inherits name="com.github.nmorel.gwtjackson.GwtJackson" />

    <generate-with class="org.turbogwt.net.http.rebind.GwtJacksonSerializersGenerator">
        <when-type-assignable class="org.turbogwt.net.http.client.GwtJacksonSerializers" />
    </generate-with>

    <entry-point class="org.turbogwt.net.http.client.ForceCompilation" />
</module>
